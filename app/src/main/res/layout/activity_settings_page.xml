<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings_page">

    <TextView
        android:id="@+id/settingsHeader_textView"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="@string/settings"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:id="@+id/Temporary"
        android:text="Various setting toggles here will not push to another page"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        />

    <Button
        android:layout_width="124dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:text="@string/back_to_home_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Temporary" />

</androidx.constraintlayout.widget.ConstraintLayout>