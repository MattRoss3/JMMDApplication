<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainUserInterface">

    <TextView
        android:id="@+id/mainUser_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="@string/temporary_username"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar_main_interface"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="253dp"
        android:layout_height="61dp"
        android:layout_marginTop="4dp"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar_id" />

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="78dp"
        android:layout_height="41dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/settingimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toEndOf="@+id/logout_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_manage"
        tools:ignore="TouchTargetSizeCheck"
        android:backgroundTint="@color/bluec"
        />

    <TextView
        android:id="@+id/progressBar_id"
        android:layout_width="179dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/my_overall_progress"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainUser_header" />

    <TextView
        android:id="@+id/Challenges_label"
        android:layout_width="181dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/my_challenges"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_challenge_button" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/myChallengesDisplayRecyclerView"
        android:layout_width="361dp"
        android:layout_height="400dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Challenges_label"
        android:foregroundGravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:foregroundGravity="center">
            <Button
                android:id="@+id/button1_mainPage"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:text="@string/sample_french_challenge"
                android:backgroundTint="@color/bluec"
                />

            <Button
                android:id="@+id/button2_mainPage"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:text="@string/sample_spanish_challenge"
                android:backgroundTint="@color/bluec"/>

            <Button
                android:id="@+id/button3_mainPage"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:text="@string/Sample_Spanish_2"
                android:backgroundTint="@color/bluec"/>
            <Button
                android:id="@+id/button4_mainPage"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:text="@string/Sample_Spanish_2"
                android:backgroundTint="@color/bluec"/>
            <Button
                android:id="@+id/button5_mainPage"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:text="@string/sample_french_challenge"
                android:backgroundTint="@color/bluec"
                />

            <Button
                android:id="@+id/button6_mainPage"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:text="@string/sample_spanish_challenge"
                android:backgroundTint="@color/bluec"/>

            <Button
                android:id="@+id/button7_mainPage"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:text="@string/Sample_Spanish_2"
                android:backgroundTint="@color/bluec"/>
            <Button
                android:id="@+id/button8_mainPage"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:text="@string/Sample_Spanish_2"
                android:backgroundTint="@color/bluec"/>
            <Button
                android:id="@+id/button9_mainPage"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:text="@string/Sample_Spanish_2"
                android:backgroundTint="@color/bluec"/>
            <Button
                android:id="@+id/button10_mainPage"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:text="@string/Sample_Spanish_2"
                android:backgroundTint="@color/bluec"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/new_challenge_button"
        android:layout_width="181dp"
        android:layout_height="50dp"
        android:text="@string/add_a_challenge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar_main_interface"
        android:backgroundTint="@color/bluec"
/>
    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        tools:layout_editor_absoluteX="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="10dp"
        android:backgroundTint="@color/bluec"
        />


</androidx.constraintlayout.widget.ConstraintLayout>